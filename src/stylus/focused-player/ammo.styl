.ammo {
	flsize(2rem, 1)

	&,
	.inner {
		margin-right auto
	}

	.inner {
		margin-right auto
		padding 0 3rem 0 1rem
		// transform skewX(-20deg)
		opacity 1
	}

	&:not(.--active) {
		opacity 0
	}

	.current,
	.reserve-wrapper {
		padding .6rem 0
		// transform skewX(20deg)


		.number {
			width 4ch
			text-align center
		}
	}

	.reserve-wrapper {
		display flex
		align-items flex-end
	}

	.reserve {
		flsize(1.5rem, 1.2)

		.number {
			display inline-flex
			justify-content flex-end
			width 3.5ch
		}
	}
}
